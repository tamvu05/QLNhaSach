<style>
    .sidebar-admin {
        width: 250px;
        height: 100%;
        min-height: 100vh;
        /* Chiều cao đầy đủ của khung nhìn */
        background-color: #2c3e50;
        /* Màu nền tối */
        color: #ecf0f1;
        /* Màu chữ mặc định */
        padding-top: 20px;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
        /* Thêm chuyển động mượt mà cho hiệu ứng */
        font-family: Arial, sans-serif;
        /* Chọn font dễ đọc */
    }

    /* Tiêu đề "Trang quản trị" */
    .sidebar-header {
        font-size: 1.5rem;
        font-weight: 700;
        text-align: center;
        padding: 15px 0 25px 0;
        letter-spacing: 1px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 15px;
    }

    /* Thiết lập cơ bản cho Menu */
    .sidebar-menu .nav {
        list-style: none;
        padding: 0;
    }

    .sidebar-menu .nav-item {
        margin: 5px 0;
    }

    /* Kiểu cho thẻ <a> (liên kết) */
    .sidebar-menu a {
        display: flex;
        /* Dùng flexbox để căn chỉnh icon và text */
        align-items: center;
        padding: 12px 20px;
        color: #ecf0f1;
        text-decoration: none;
        font-size: 1rem;
        transition: all 0.3s ease;
        /* Chuyển đổi mượt mà */
        border-left: 5px solid transparent;
        /* Tạo không gian cho hiệu ứng border trái */
    }

    /* Hiệu ứng hover cho liên kết */
    .sidebar-menu a:hover {
        background-color: #34495e;
        /* Màu nền hơi sáng hơn khi hover */
        color: #ffffff;
        /* Màu chữ trắng khi hover */
        border-left-color: #3498db;
        /* Hiệu ứng đường viền màu xanh */
    }

    /* Kiểu cho Icon */
    .sidebar-menu a i {
        font-size: 1.1rem;
        margin-right: 15px;
        /* Khoảng cách giữa icon và chữ */
        width: 20px;
        /* Đảm bảo icon có cùng chiều rộng */
        text-align: center;
    }

    /* Kiểu cho chữ */
    .sidebar-menu a span {
        flex-grow: 1;
        /* Cho phép chữ lấp đầy phần còn lại */
    }

    /* --- CSS BỔ SUNG HOẶC CHỈNH SỬA --- */

    /* Điều chỉnh lại kiểu cho thẻ <a> để áp dụng nav-link của BS */
    .sidebar-menu a.nav-link {
        display: flex;
        align-items: center;
        padding: 12px 20px;
        color: #ecf0f1;
        text-decoration: none;
        font-size: 1rem;
        transition: all 0.3s ease;
        border-left: 5px solid transparent;
    }

    .sidebar-menu a.nav-link:hover,
    .sidebar-menu a.nav-link.active {
        /* Thêm active state */
        background-color: #34495e;
        color: #ffffff;
        border-left-color: #3498db;
    }

    /* Kiểu cho icon mũi tên (dropdown-icon) */
    .sidebar-menu .dropdown-toggle {
        position: relative;
        /* Đảm bảo icon nằm trong thẻ a */
        padding-right: 50px;
    }

    .sidebar-menu .dropdown-icon {
        position: absolute;
        right: 20px;
        margin-right: 0 !important;
        transition: transform 0.3s ease;
        /* Thay đổi kích thước icon mũi tên nếu cần */
        font-size: 0.85rem;
    }

    /* Khi dropdown đang mở (Bootstrap tự thêm class 'collapsed' khi đóng) */
    .sidebar-menu .dropdown-toggle:not(.collapsed) .dropdown-icon {
        transform: rotate(-180deg);
    }

    /* Kiểu cho Submenu (menu con) */
    .sidebar-menu .submenu {
        background-color: #2c3e50;
        /* Giữ màu nền tối */
    }

    .sidebar-menu .submenu .sub-ul {
        padding-left: 0;
        /* Loại bỏ padding mặc định của ul lồng */
    }

    /* Tạo độ thụt vào cho các mục con */
    .sidebar-menu .submenu .nav-item a.nav-link {
        padding: 10px 20px 10px 45px;
        /* Thụt vào 45px */
        font-size: 0.95rem;
        border-left: none;
        /* Bỏ border trái để phân biệt với mục cha */
    }

    /* Điều chỉnh lại icon trong submenu, có thể làm mờ hơn */
    .sidebar-menu .submenu .nav-item a.nav-link i {
        opacity: 0.7;
    }

    /* Hiệu ứng hover cho mục con */
    .sidebar-menu .submenu .nav-item a.nav-link:hover {
        background-color: #34495e;
        color: #ffffff;
        /* Có thể thêm border trái nhỏ nếu muốn nhấn mạnh */
        border-left: 3px solid #3498db;
    }

    .dropdown-toggle::after {
        content: none !important;
    }

    .sidebar-divider {
        height: 1px;
        margin: 15px 20px;
        background: rgba(255, 255, 255, 0.2);
        list-style: none;
    }
</style>


