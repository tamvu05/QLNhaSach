<%
// Lấy dữ liệu từ API EmployeeService
const account = locals.account || {};
const statusMap = {
    'ACTIVE': 'Đang hoạt động',
    'HOAT_DONG': 'Đang hoạt động',
    'INACTIVE': 'Không hoạt động',
    'DUNG_HOAT_DONG': 'Không hoạt động'
};

const user = {
    fullName: account.TenNV || "N/A",
    email: account.Email || "N/A",
    role: account.VaiTro ? (account.VaiTro === 1 ? "Quản trị viên" : account.VaiTro === 2 ? "Quản lý kho" : "Nhân viên") : "Không xác định",
    phone: account.SDT || "N/A",
    joinDate: account.NgayVaoLam ? new Date(account.NgayVaoLam).toLocaleDateString('vi-VN') : "N/A",
    employeeId: account.MaNV || "N/A",
    dateOfBirth: account.NgaySinh ? new Date(account.NgaySinh).toLocaleDateString('vi-VN') : "N/A",
    status: statusMap[account.TrangThai] || "Không xác định"
};
%>

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-2 fw-bold">
                Thông tin cá nhân
            </h1>
            <p class="text-muted mb-0">Xem và chỉnh sửa thông tin tài khoản của bạn</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Profile Card -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <div class="avatar-circle mx-auto mb-3">
                            <i class="fas fa-user fa-4x text-white"></i>
                        </div>
                        <h4 class="mb-1 fw-bold"><%= user.fullName %></h4>
                        <span class="badge bg-primary"><%= user.role %></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary" disabled>
                            <i class="fas fa-camera me-2"></i> Đổi ảnh đại diện
                        </button>
                        <button class="btn btn-outline-danger" disabled>
                            <i class="fas fa-key me-2"></i> Đổi mật khẩu
                        </button>
                    </div>
                </div>
            </div>

           
        </div>

        <!-- Information Form -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-id-card"></i> Chi tiết tài khoản
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-id-badge text-primary"></i> Mã nhân viên
                                </label>
                                <input type="text" class="form-control" value="<%= user.employeeId %>" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user text-primary"></i> Họ và tên
                                </label>
                                <input type="text" class="form-control" value="<%= user.fullName %>" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-envelope text-primary"></i> Email
                                </label>
                                <input type="text" class="form-control" value="<%= user.email %>" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-phone text-primary"></i> Số điện thoại
                                </label>
                                <input type="tel" class="form-control" value="<%= user.phone %>" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-birthday-cake text-primary"></i> Ngày sinh
                                </label>
                                <input type="text" class="form-control" value="<%= user.dateOfBirth %>" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user-tag text-primary"></i> Vai trò
                                </label>
                                <input type="text" class="form-control" value="<%= user.role %>" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-calendar text-primary"></i> Ngày vào làm
                                </label>
                                <input type="text" class="form-control" value="<%= user.joinDate %>" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-check-circle text-primary"></i> Trạng thái
                                </label>
                                <input type="text" class="form-control" value="<%= user.status %>" readonly>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="alert alert-info border-0" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Để cập nhật thông tin cá nhân, vui lòng liên hệ quản trị viên hệ thống.
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <button type="button" class="btn btn-outline-secondary" disabled>
                                <i class="fas fa-times me-2"></i> Hủy
                            </button>
                            <button type="button" class="btn btn-primary" disabled>
                                <i class="fas fa-save me-2"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Activity Card -->
            
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .timeline-badge {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        flex-shrink: 0;
    }

    .timeline-item {
        position: relative;
    }

    .timeline-item:not(:last-child)::after {
        content: '';
        position: absolute;
        left: 18px;
        top: 40px;
        bottom: -20px;
        width: 2px;
        background: #e0e0e0;
    }

    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-2px);
    }
</style>
