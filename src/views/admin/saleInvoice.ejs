<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
    integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<div class="container-fluid py-4 manager-container">
    <div class="header-section mb-4 pb-3">
        <h1 class="page-title">Danh sách hóa đơn
        </h1>
    </div>

    <div class="row mb-4 align-items-center">
        <div class="col-lg-8 col-md-7 col-12">
            <div class="search-card card">
                <div class="card-body p-3">
                    <div class="input-group search-input-group">
                        <input type="text" class="form-control search-value" placeholder="Tìm kiếm theo số điện thoại khách hàng">
                        <button class="btn btn-search search-button" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-5 col-12 d-flex justify-content-end action-buttons-row">
            <div class="me-3">
                <button type="button" class="btn btn-add-primary" data-bs-toggle="modal"
                    data-bs-target="<%= modalAddSelector %>">
                    <i class="fas fa-plus"></i> Tạo hóa đơn mới
                </button>
            </div>

            <div>
                <button class="btn btn-outline-success export-button d-none">
                    Xuất excel <i class="far fa-file-excel"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="table-responsive" id="table-view-manager">
        <%- include(tablePartial) %>
    </div>

    <div id="pagination-view-manager" class="mt-4">
        <%- include('partials/pagination') %>
    </div>
</div>


<!-- Modal Add -->
<%- include(modalAddPartial) %>

<% if (typeof modalUpdatePartial !== 'undefined') { %>
    <!-- Modal Update -->
    <%- include(modalUpdatePartial) %>
<% } %>

<script type="module" src="/js/paginationViewManager.js"></script>
