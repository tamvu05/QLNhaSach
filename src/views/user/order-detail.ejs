<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary mb-1">Đơn hàng #<%= order.MaPX %></h3>
            <span class="text-muted small">Ngày đặt: <%= new Date(order.NgayXuat).toLocaleDateString('vi-VN') %></span>
        </div>
        
        <div>
            <% if (order.TrangThai === 'CHO_XAC_NHAN') { %>
                <span class="badge bg-warning text-dark fs-6 px-3 py-2 rounded-pill">Chờ xác nhận</span>
            <% } else if (order.TrangThai === 'DANG_GIAO') { %>
                <span class="badge bg-primary fs-6 px-3 py-2 rounded-pill">Đang giao hàng</span>
            <% } else if (order.TrangThai === 'DA_GIAO') { %>
                <span class="badge bg-success fs-6 px-3 py-2 rounded-pill">Giao thành công</span>
            <% } else { %>
                <span class="badge bg-danger fs-6 px-3 py-2 rounded-pill">Đã hủy</span>
            <% } %>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-uppercase text-muted mb-3 small">Thông tin nhận hàng</h6>
                    <h5 class="fw-bold mb-2"><%= order.TenNguoiNhan %></h5>
                    <p class="mb-1 text-muted"><i class="bi bi-telephone me-2"></i> <%= order.SDT %></p>
                    <p class="mb-0 text-muted"><i class="bi bi-geo-alt me-2"></i> <%= order.DiaChiNhan %></p>
                    
                    <% if (order.MucDich) { %>
                        <div class="mt-3 pt-3 border-top">
                            <small class="text-muted d-block">Ghi chú:</small>
                            <span><%= order.MucDich %></span>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="fw-bold m-0">Sản phẩm đã mua</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <tbody>
                            <% items.forEach(item => { %>
                                <tr>
                                    <td class="ps-4 py-3" style="width: 60px;">
                                        <img src="<%= item.HinhAnh %>" class="rounded border" style="width: 50px; height: 70px; object-fit: cover;">
                                    </td>
                                    <td>
                                        <div class="fw-bold"><%= item.TenSach %></div>
                                        <small class="text-muted">x<%= item.SoLuong %></small>
                                    </td>
                                    <td class="text-end pe-4 fw-bold">
                                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(item.DonGiaXuat) %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="2" class="text-end py-3 fw-bold text-muted">Tổng tiền:</td>
                                <td class="text-end pe-4 py-3 text-danger fs-5 fw-bold">
                                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(order.TongTien) %>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            
            <div class="mt-4 text-end">
                <a href="/order/history" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-1"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>