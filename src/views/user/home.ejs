<section class="hero-section">
    <div class="container position-relative z-index-2">
        <div class="row align-items-center py-4">
            
            <div class="col-lg-6 text-center text-lg-start">
                <span class="badge bg-white text-primary border border-primary border-opacity-25 px-3 py-2 rounded-pill mb-3 fw-bold shadow-sm">
                    <i class="bi bi-stars text-warning"></i> Không gian tri thức
                </span>
                
                <h1 class="display-4 fw-bolder mb-3 text-dark" style="line-height: 1.2;">
                    Thế Giới Sách <br>
                    <span class="text-primary">Trong Tầm Tay Bạn</span>
                </h1>
                
                <p class="lead mb-4 text-secondary">
                    "Khám phá kho tàng tri thức với hàng ngàn ưu đãi hấp dẫn."
                </p>
                
                <div class="d-flex gap-3 justify-content-center justify-content-lg-start mb-5">
                    <a href="/book" class="btn btn-primary btn-lg px-5 rounded-pill fw-bold shadow hover-up">
                        Mua Ngay
                    </a>
                    <a href="/category" class="btn btn-white border btn-lg px-4 rounded-pill fw-bold hover-up bg-white text-dark">
                        Danh mục
                    </a>
                </div>

                <div class="row g-3 justify-content-center justify-content-lg-start pt-2 border-top border-secondary border-opacity-10">
                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-3 bg-white px-3 py-2 rounded-4 shadow-sm border border-light h-100">
                            <div class="d-flex align-items-center justify-content-center bg-primary bg-opacity-10 text-primary rounded-circle" style="width: 45px; height: 45px;">
                                <i class="bi bi-rocket-takeoff-fill fs-5"></i>
                            </div>
                            <div class="lh-1 text-start">
                                <h6 class="fw-bold text-dark mb-1" style="font-size: 0.9rem;">Giao nhanh 2H</h6>
                                <small class="text-muted" style="font-size: 0.75rem;">Nội thành HCM</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-3 bg-white px-3 py-2 rounded-4 shadow-sm border border-light h-100">
                            <div class="d-flex align-items-center justify-content-center bg-success bg-opacity-10 text-success rounded-circle" style="width: 45px; height: 45px;">
                                <i class="bi bi-patch-check-fill fs-5"></i>
                            </div>
                            <div class="lh-1 text-start">
                                <h6 class="fw-bold text-dark mb-1" style="font-size: 0.9rem;">Sách thật 100%</h6>
                                <small class="text-muted" style="font-size: 0.75rem;">Đền bù gấp đôi</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-3 bg-white px-3 py-2 rounded-4 shadow-sm border border-light h-100">
                            <div class="d-flex align-items-center justify-content-center bg-warning bg-opacity-10 text-warning rounded-circle" style="width: 45px; height: 45px;">
                                <i class="bi bi-arrow-repeat fs-5"></i>
                            </div>
                            <div class="lh-1 text-start">
                                <h6 class="fw-bold text-dark mb-1" style="font-size: 0.9rem;">Đổi trả 30 ngày</h6>
                                <small class="text-muted" style="font-size: 0.75rem;">Thủ tục đơn giản</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 text-center d-none d-lg-block">
                <img src="/images/banner.jpg" 
                     alt="Reading Banner" 
                     class="img-fluid hero-img-style w-100"
                     style="max-width: 500px; object-fit: cover;">
            </div>
        </div>
    </div>
</section>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark ps-3 border-start border-4 border-primary">
            Sách Mới Nổi Bật
        </h3>
        <a href="/book" class="btn btn-outline-primary btn-sm rounded-pill px-3">
            Xem tất cả
        </a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
        <% if (books && books.length > 0) { %>
            <% books.forEach(book => { %>
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm book-card-hover">
                        <div class="position-relative text-center p-3 bg-white rounded-top" style="height: 260px;">
                            <a href="/book/<%= book.id %>">
                                <% if (book.HinhAnh) { %>
                                    <img src="<%= book.HinhAnh %>" class="img-fluid h-100 object-fit-contain hover-zoom" alt="<%= book.TenSach %>">
                                <% } else { %>
                                    <div class="d-flex align-items-center justify-content-center h-100 bg-light rounded text-muted">
                                        <i class="bi bi-image fs-1"></i>
                                    </div>
                                <% } %>
                            </a>
                                <span class="position-absolute top-0 start-0 m-2 badge bg-danger rounded-pill shadow-sm">Hot</span>
                        </div>

                        <div class="card-body pt-0">
                            <small class="text-muted d-block mb-1"><%= book.TheLoai || 'Tổng hợp' %></small>
                            <h6 class="card-title text-truncate fw-bold mb-1">
                                <a href="/book/<%= book.id %>" class="text-decoration-none text-dark stretched-link">
                                    <%= book.TenSach %>
                                </a>
                            </h6>
                            <div class="d-flex justify-content-between align-items-end mt-3">
                                <span class="text-primary fw-bold fs-5">
                                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(book.DonGia) %>
                                </span>
                                <button class="btn btn-light text-primary btn-sm border rounded-circle hover-bg-primary" style="width: 35px; height: 35px;">
                                    <i class="bi bi-bag-plus-fill"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12 text-center py-5 text-muted">
                <p>Chưa có dữ liệu hiển thị.</p>
            </div>
        <% } %>
    </div>
</div>