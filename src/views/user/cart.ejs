    <% } %>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    console.log("‚úÖ Script t√≠nh ti·ªÅn Voucher ƒë√£ ch·∫°y!");

    // 1. L·∫•y gi√° tr·ªã t·ªïng g·ªëc an to√†n h∆°n
    // √âp ki·ªÉu Number ƒë·ªÉ tr√°nh l·ªói n·∫øu server g·ª≠i v·ªÅ chu·ªói
    const originalTotal = Number('<%= grandTotal %>'); 
    
    console.log("üí∞ T·ªïng ti·ªÅn g·ªëc:", originalTotal);

    // Format ti·ªÅn t·ªá Vi·ªát Nam
    const formatVND = (amount) => {
        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
    };

    // 2. L·∫Øng nghe s·ª± ki·ªán click cho t·∫•t c·∫£ radio voucher
    const radios = document.querySelectorAll('.voucher-radio');
    
    if (radios.length === 0) {
        console.warn("‚ö†Ô∏è Kh√¥ng t√¨m th·∫•y radio voucher n√†o (C√≥ th·ªÉ do ch∆∞a c√≥ voucher kh·∫£ d·ª•ng).");
    }

    radios.forEach(radio => {
        radio.addEventListener('change', function() {
            console.log("üëâ ƒê√£ ch·ªçn voucher:", this.value);
            calculateTotal(this);
        });
    });

    // 3. H√†m t√≠nh to√°n l·∫°i ti·ªÅn
    function calculateTotal(selectedRadio) {
        if (!selectedRadio) return;

        // L·∫•y d·ªØ li·ªáu t·ª´ th·∫ª input (ƒë√£ ƒë∆∞·ª£c server render s·∫µn)
        const type = selectedRadio.getAttribute('data-type');     // 'percent' ho·∫∑c 'fixed'
        const value = parseFloat(selectedRadio.getAttribute('data-value')) || 0; // Gi√° tr·ªã gi·∫£m
        const max = parseFloat(selectedRadio.getAttribute('data-max')) || 0;     // T·ªëi ƒëa
        const code = selectedRadio.value; // M√£ voucher

        let discountAmount = 0;

        // Logic t√≠nh to√°n
        if (type === 'percent' || type === 'percent') { // check k·ªπ c·∫£ 2 tr∆∞·ªùng h·ª£p t√™n
            discountAmount = (value / 100) * originalTotal;
            // N·∫øu c√≥ gi·ªõi h·∫°n t·ªëi ƒëa
            if (max > 0 && discountAmount > max) {
                discountAmount = max;
            }
        } else {
            // Gi·∫£m ti·ªÅn m·∫∑t tr·ª±c ti·∫øp
            discountAmount = value;
        }

        console.log(`üìâ ƒêang gi·∫£m: ${discountAmount} (Lo·∫°i: ${type}, Gi√° tr·ªã: ${value})`);

        // ƒê·∫£m b·∫£o kh√¥ng gi·∫£m qu√° s·ªë ti·ªÅn hi·ªán c√≥ (kh√¥ng ƒë·ªÉ √¢m ti·ªÅn)
        if (discountAmount > originalTotal) {
            discountAmount = originalTotal;
        }

        const newTotal = originalTotal - discountAmount;

        // 4. C·∫¨P NH·∫¨T GIAO DI·ªÜN
        
        // C·∫≠p nh·∫≠t d√≤ng "√Åp d·ª•ng voucher"
        const discountEl = document.getElementById('display-discount');
        if (discountEl) {
            discountEl.innerText = '-' + formatVND(discountAmount);
            discountEl.classList.remove('d-none'); // Hi·ªán l√™n n·∫øu ƒëang ·∫©n
        }

        // C·∫≠p nh·∫≠t d√≤ng "T·ªïng c·ªông"
        const totalEl = document.getElementById('display-grand-total');
        if (totalEl) {
            totalEl.innerText = formatVND(newTotal);
        }

        // 5. HIGHLIGHT UI (L√†m ƒë·∫πp th·∫ª ƒë∆∞·ª£c ch·ªçn)
        document.querySelectorAll('.voucher-card').forEach(el => {
            el.classList.remove('border-primary', 'bg-primary');
            el.classList.add('border-warning', 'bg-warning'); 
            el.style.backgroundColor = ''; 
        });
        
        const parentLabel = selectedRadio.closest('label');
        if (parentLabel) {
            parentLabel.classList.remove('border-warning', 'bg-warning');
            parentLabel.classList.add('border-primary');
            parentLabel.style.backgroundColor = '#e7f1ff'; 
        }

        // 6. C·∫≠p nh·∫≠t link n√∫t thanh to√°n ƒë·ªÉ g·ª≠i m√£ voucher ƒëi
        const checkoutBtn = document.getElementById('btn-checkout');
        if (checkoutBtn) {
            checkoutBtn.href = `/checkout?voucher=${code}`;
        }
    }

    // H√†m b·ªè ch·ªçn (Reset) - C·∫ßn g√°n v√†o window ƒë·ªÉ n√∫t b·∫•m g·ªçi ƒë∆∞·ª£c
    window.resetVoucher = function() {
        const checked = document.querySelector('input[name="selected_voucher"]:checked');
        if (checked) checked.checked = false;

        // Reset v·ªÅ 0ƒë
        const discountEl = document.getElementById('display-discount');
        if (discountEl) discountEl.innerText = '0 ‚Ç´';

        const totalEl = document.getElementById('display-grand-total');
        if (totalEl) totalEl.innerText = formatVND(originalTotal);

        const checkoutBtn = document.getElementById('btn-checkout');
        if (checkoutBtn) checkoutBtn.href = '/checkout';

        // Reset m√†u s·∫Øc
        document.querySelectorAll('.voucher-card').forEach(el => {
            el.classList.remove('border-primary');
            el.classList.add('border-warning');
            el.style.backgroundColor = '';
        });
        
        console.log("üîÑ ƒê√£ b·ªè ch·ªçn voucher");
    }
});
</script>