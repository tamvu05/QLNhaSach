<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <h3 class="fw-bold text-center mb-4 text-primary">Mật Khẩu Mới</h3>
                    <% if (error) { %> <div class="alert alert-danger py-2 small"><%= error %></div> <% } %>

                    <form action="/reset-password" method="POST">
                        <input type="hidden" name="email" value="<%= email %>">

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control rounded-pill px-4" name="password" placeholder="Pass" required>
                            <label class="px-4">Mật khẩu mới</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control rounded-pill px-4" name="confirmPassword" placeholder="Confirm" required>
                            <label class="px-4">Nhập lại mật khẩu</label>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 rounded-pill py-3 fw-bold">Lưu Mật Khẩu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>