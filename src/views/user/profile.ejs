<div class="container py-5">
    <div class="row g-4">
        
        <div class="col-lg-3">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body text-center py-4">
                    <div class="position-relative d-inline-block mb-3">
                        <img src="https://ui-avatars.com/api/?name=<%= profile.HoTen %>&background=0d6efd&color=fff&size=128" 
                             class="rounded-circle border border-4 border-white shadow-sm" alt="Avatar">
                    </div>
                    <h5 class="fw-bold mb-1"><%= profile.HoTen %></h5>
                    <p class="text-muted small mb-4"><%= profile.TenDangNhap %></p>
                    
                    <div class="list-group list-group-flush text-start">
                        <a href="/profile" class="list-group-item list-group-item-action active border-0 rounded-3 mb-1">
                            <i class="bi bi-person-gear me-2"></i> Thông tin tài khoản
                        </a>
                        <a href="#" class="list-group-item list-group-item-action border-0 rounded-3 mb-1">
                            <i class="bi bi-bag-check me-2"></i> Đơn hàng của tôi
                        </a>
                        <a href="/logout" class="list-group-item list-group-item-action border-0 rounded-3 text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-person-vcard me-2"></i> Hồ Sơ Của Tôi</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/profile/update" method="POST">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Email / Tên đăng nhập</label>
                                <input type="text" class="form-control bg-light" value="<%= profile.TenDangNhap %>" disabled>
                                <div class="form-text"><i class="bi bi-info-circle"></i> Tên đăng nhập không thể thay đổi.</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Họ và tên</label>
                                <input type="text" class="form-control" name="HoTen" value="<%= profile.HoTen %>" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Số điện thoại</label>
                                <input type="text" class="form-control" name="SDT" value="<%= profile.SDT || '' %>" placeholder="Thêm số điện thoại">
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-semibold">Địa chỉ giao hàng</label>
                                <input type="text" class="form-control" name="DiaChi" value="<%= profile.DiaChi || '' %>" placeholder="Ví dụ: 123 Đường ABC, Quận 1...">
                            </div>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-primary px-4 rounded-pill fw-bold shadow-sm hover-up">
                                <i class="bi bi-save me-1"></i> Lưu Thay Đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>