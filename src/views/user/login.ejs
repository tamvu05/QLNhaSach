<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary">Chào Mừng Trở Lại!</h2>
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger text-center py-2 mb-4" role="alert">
                                <i class="fa-solid fa-circle-exclamation me-1"></i> <%= error %>
                            </div>
                        <% } %>
                        <p class="text-muted">Vui lòng đăng nhập để tiếp tục.</p>
                    </div>

                    <form action="/login" method="POST">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control rounded-pill px-4" id="email" name="email" placeholder="name@example.com" required>
                            <label for="email" class="px-4">Địa chỉ Email</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control rounded-pill px-4" id="password" name="password" placeholder="Password" required>
                            <label for="password" class="px-4">Mật khẩu</label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check ms-2">
                                <input class="form-check-input" type="checkbox" id="rememberMe" name="remember" value="on">
                                <label class="form-check-label small text-muted" for="rememberMe">Ghi nhớ đăng nhập</label>
                            </div>
                            <a href="/forgot-password" class="text-decoration-none small text-primary fw-bold">Quên mật khẩu?</a>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary rounded-pill py-3 fw-bold shadow-sm hover-up">
                                Đăng Nhập
                            </button>
                        </div>
                    </form>

                    <div class="text-center mb-4 position-relative">
                        <hr class="text-muted opacity-25">
                        <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">Hoặc đăng nhập với</span>
                    </div>
                    <div class="d-flex justify-content-center gap-3 mb-4">
                        <button class="btn btn-outline-light border text-dark rounded-circle shadow-sm" style="width: 45px; height: 45px;">
                            <i class="bi bi-google text-danger"></i>
                        </button>
                        <button class="btn btn-outline-light border text-dark rounded-circle shadow-sm" style="width: 45px; height: 45px;">
                            <i class="bi bi-facebook text-primary"></i>
                        </button>
                    </div>

                    <div class="text-center small">
                        Chưa có tài khoản? 
                        <a href="/register" class="text-primary fw-bold text-decoration-none">Đăng ký ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>